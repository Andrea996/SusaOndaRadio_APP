<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="10004" defaultlocale="en" id="io.smokemedia.smokemedia" version="1.0.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Susa Onda Radio</name>
    <description>
        Read the latest news, reviews and features from Smoke Media, and tune into Smoke Radio.
    </description>
    <author email="smc@smoke.media" href="http://smoke.media">
        Joshua Hackett
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="19" />
        <preference name="android-targetSdkVersion" value="23" />
        <allow-intent href="market:*" />
        <icon src="res/icon.png" />
        <splash src="res/splash.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarBackgroundColor" value="#801F2D" />
    <preference name="HeaderColor" value="#801F2D" />
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="3000" />
    <engine name="android" spec="^6.2.3" />
    <plugin name="cordova-disable-http-cache" spec="https://github.com/kroodle/cordova-disable-http-cache" />
    <plugin name="cordova-plugin-headercolor" spec="https://github.com/tomloprod/cordova-plugin-headercolor" />
    <plugin name="cordova-plugin-music-controls" spec="https://github.com/homerours/cordova-music-controls-plugin" />
    <plugin name="cordova-plugin-splashscreen" spec="https://github.com/apache/cordova-plugin-splashscreen" />
    <plugin name="cordova-plugin-statusbar" spec="https://github.com/apache/cordova-plugin-statusbar" />
    <plugin name="cordova-plugin-whitelist" spec="https://github.com/apache/cordova-plugin-whitelist" />
    <plugin name="cordova-plugin-x-socialsharing" spec="https://github.com/EddyVerbruggen/SocialSharing-PhoneGap-Plugin" />
</widget>
